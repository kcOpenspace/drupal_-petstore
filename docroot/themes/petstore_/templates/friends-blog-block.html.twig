
<div class="blog-wrapper">
  <div class="left-div">
    <img src="https://images.unsplash.com/photo-1500479694472-551d1fb6258d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="">
  </div>
  <div class="right-div">
    <div class="title-wrap">
      <h2 class="title-label">Pet Store Friends</h2>
      <p>Latest articles from our pet mates</p>
    </div>
    {% for post in body %}
    <div class="blog-wrap">
      <h3 class="blog-title">{{ post.title }}</h3>
      <p class="blog-body">{{ post.body }}</p>
    </div>
    {% endfor %}
    <a href="#" class="read-more-btn">Read More</a>
  </div>
</div>
